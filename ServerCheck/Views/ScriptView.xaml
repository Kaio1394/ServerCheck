<UserControl x:Class="ServerCheck.Views.ScriptView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServerCheck.Views"
             xmlns:viewmodels="clr-namespace:ServerCheck.ViewModels"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <viewmodels:ScriptViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Servers" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center">
                <ComboBox x:Name="cbServers" Width="200" 
                          Margin="5" 
                          DisplayMemberPath="Host" 
                          ItemsSource="{Binding WebApiServers}"
                          SelectedItem="{Binding SelectedServer, Mode=TwoWay}">
                </ComboBox>
            </GroupBox>

            <Button Content="Execute"
                x:Name="btExecute"
                Grid.Column="1"
                Width="100"
                Height="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,5,10,5"
                Click="ExecuteButton_Click"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>



            <Border Grid.Row="0"
                Grid.Column="0"
                BorderThickness="2"
                BorderBrush="SteelBlue"
                CornerRadius="4">
                <avalonedit:TextEditor x:Name="CodeEditor"
                               ShowLineNumbers="True"
                               FontFamily="Consolas"
                               FontSize="14"
                               SyntaxHighlighting="Python"
                               Margin="5"/>
            </Border>

            <TextBox Text="{Binding ScriptOutput, Mode=OneWay}"
                 FontFamily="Consolas"
                 FontSize="14"
                 Foreground="LightGray"
                 Background="Black"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Margin="5"
                 BorderBrush="Gray"
                 BorderThickness="1"
                 Padding="5"
                 Grid.Row="1"
                 Grid.Column="0"/>
        </Grid>
    </Grid>
</UserControl>
